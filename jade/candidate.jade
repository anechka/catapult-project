                    .col-md-12.carousel-container

                        .row

                            #carousel-content.carousel.slide(data-ride='carousel')
                                // Indicators
                                ol.carousel-indicators
                                    li.active(data-target='#carousel-content', data-slide-to='0')
                                    li(data-target='#carousel-content', data-slide-to='1')
                                    li(data-target='#carousel-content', data-slide-to='2')
                                // Wrapper for slides
                                .carousel-inner(role='listbox')
                                    .item.active
                                        .col-md-12.gutter-0.bg-women-1
                                            .container
                                                .row
                                                    .col-md-12
                                                        h1.staff-header
                                                            span Looking for a job?
                                                            br
                                                            | We're here for you



                                    .item
                                        .col-md-12.gutter-0.bg-women-2
                                            .container
                                                .row
                                                    .col-md-12
                                                        h1.staff-header
                                                            span Staff on holiday?
                                                            br
                                                            | We're here for you



                                // Controls
                                a.left.carousel-control.control-left(href='#carousel-content', role='button', data-slide='prev')
                                    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                                    span.sr-only Previous
                                a.right.carousel-control.control-right(href='#carousel-content', role='button', data-slide='next')
                                    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                                    span.sr-only Next


                section#CatapultWorks
                    .row
                        .col-md-12.icons-container.section-box
                            .container
                                .row
                                    .col-md-12.text-center
